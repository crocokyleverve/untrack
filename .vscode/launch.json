{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ADI Driver",
            "type": "python",
            "request": "launch",
            "module": "tools",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "args": [
                "dev",
                "__VSCODE_HACK__${relativeFileDirname}"
            ],
            "justMyCode": true
        },
        {
            "name": "ADI in AWX",
            "type": "python",
            "request": "launch",
            "module": "tools.dev.debug",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "args": [
                "${relativeFileDirname}",
                "${workspaceFolder}"
            ],
            "justMyCode": true
        },
        {
            "name": "E2E Driver",
            "type": "python",
            "request": "launch",
            "module": "tools",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "args": [
                "e2e",
                "__VSCODE_HACK__${relativeFileDirname}"
            ],
            "justMyCode": true
        },
        {
            "name": "Run-Expected ADIModule",
            "type": "python",
            "request": "launch",
            "module": "tools",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "args": [
                "dev",
                "__VSCODE_HACK__${relativeFileDirname}",
                "-m",
                "expected"
                // ">",
                // "<Path to local output directory>"
                // ^ You can update and uncomment the above if you'd like to pipe the output to a file
            ],
            "justMyCode": true
        },
        {
            "name": "Run-NoValidation ADIModule",
            "type": "python",
            "request": "launch",
            "module": "tools",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "args": [
                "dev",
                "__VSCODE_HACK__${relativeFileDirname}",
                "-m",
                "run"
            ],
            "justMyCode": true
        },
        {
            "name": "Run-Properties ADIModule",
            "type": "python",
            "request": "launch",
            "module": "tools",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "args": [
                "dev",
                "__VSCODE_HACK__${relativeFileDirname}",
                "-m",
                "props"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Run ADI v2 File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "enter-your-module-name-here",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}